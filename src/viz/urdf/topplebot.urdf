<?xml version="1.0"?>
<robot name="topplebot">

  <!-- Base link of the cube -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://viz/meshes/Orientation_Display_Assy_01.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Node_0 link (anchor point in the TF tree) -->
  <link name="node_0">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint connecting base_link to node_0 -->
  <joint name="base_link_joint" type="fixed">
    <parent link="node_0"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
