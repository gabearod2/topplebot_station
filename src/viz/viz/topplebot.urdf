<?xml version="1.0"?>
<robot name="topplebot">
  <!-- Define the link for the cube -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/> <!-- Cube size in meters -->
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/> <!-- Green color with full opacity -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Define the root joint (fixed) -->
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
</robot>
